@name Persuit Moonlight
@namespace    github.com/openstyles/stylus
@version      1.0.0
@license      unlicense
@preprocessor default
@var text  monospaceFont "Monospace font" "JetBrains Mono"
@var color desaturated-gray "Desaturated Gray" #7f85a3
@var color darkBlue "Dark Blue" #82aaff
@var color skyBlue "Sky Blue" #56c9ff
@var color cyan "Cyan" #86e1fc
@var color red "Red" #ff757f
@var color darkRed "Dark Red" #ff5370
@var color lightLed "Light Red" #ff98a4
@var color yellow "Yellow" #ffc777
@var color orange "Orange" #ff966c
@var color darkOrange "Dark Orange" #fc7b7b
@var color teal "Teal" #4fd6be
@var color green "Green" #c3e88d
@var color purple "Purple" #c597f9
@var color pink "Pink" #f7a4ec
@var color indigo "Indigo" #7a88cf
@var color brightCyan "Bright Cyan" #b4f9f8
@var color gray1 "Gray 1" #131421
@var color gray2 "Gray 2" #191a2a
@var color gray3 "Gray 3" #1e2030
@var color gray4 "Gray 4" #222436
@var color gray5 "Gray 5" #2f334d
@var color gray6 "Gray 6" #4d5482
@var color gray7 "Gray 7" #828bb8
@var color gray8 "Gray 8" #a9b8e8
@var color gray9 "Gray 9" #b4c2f0
@var color gray10 "Gray 10" #c8d3f5
==/UserStyle== */

@-moz-document domain("https://pursuit.purescript.org/") {
  body
    background-color gray4
    color gray9
    font-family sans-serif

  :target
    background-color gray4

  ::selection
    background-color teal
    color white

  table, td
    border-color gray2

  hr
    background-color rgba(gray1, 10%)

  a, a:visited
    &:hover
      color lighten(darkBlue, 1.28%)
    &, &:hover > code
      color darkBlue

  .decl__body
      .keyword, .syntax
        color purple
      .message.message--not-available
        border-color darkRed
        background-color darkRed
        color white
      .top-banner
        background-color gray3
        &__actions__item a:hover, &__logo:hover
          color darkBlue
      .footer
        background-color gray3
        p
          color lighten(gray6, 5%)
        .deplink__version
          color $dark-orange
          font-weight 500
        .page-title__label
          color $gray-8
        .grouped-list
          border-top 1px solid gray1
          &__title
            color gray8
            font-weight 400


  // Result
  .result__signature
    background-color gray3;
    border 1px solid gray2;
    padding 0.5rem;

  // List
  ul
    list-style-type disc
    color gray9
    li
      padding-left 0
      &::before
        content ""

  // Input
  #search-input, select#hident2
    background-color gray2

  #search-input
    color gray10
    &::placeholder
      color gray6

  select#hident2
    border none
    outline none
    padding 0.3rem


  // Badges
  .badge.badge--
    &package
      background-color pink
    &module
      background-color darkOrange

  // Code
  code,pre
    :target &
      background-color gray2
    background-color gray3
    color gray8
    font-weight 500
    font-family monospaceFont, monospace

  .ctor
    color yellow

  tokens = {
    k: purple,
    c1: orange,
    en: yellow,
    s: green,
    ent: red,
    smi: gray9
  }

  .decl__
    &anchor
      &, &:visited
        color gray8
      &:hover
        color lighten(darkBlue, 1.28%)
    &signature, :target &signature
      border 1px solid gray1
      font-weight 500
      background-color gray2
      padding 0.8rem
      for name, value in tokens
        &{name}
          color value
}